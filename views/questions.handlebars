<!-- Create a list for each question in this specific 'land'
load each question, the 4 answer options and a submit button.
Each answer has a specific id, i.e. question 3 answer 4 would be
id='question3answer4' -SB
 -->

 <ul>
{{#each question}}
     <!-- if question.state returns a false value
 -->
 {{#unless state}} 

 <p>
  {{id}}.{{question}}
</p>
<form id="question{{@index}}" METHOD="post" action="/answers">
<input type="hidden" name="id" value="{{id}}" />
<div class="radio" id="question{{this.id}}answer1">
  <label><input type="radio" name="optradio" value='1'>{{this.answer1}}</label>
</div>
<div class="radio" id="question{{this.id}}answer2">
  <label><input type="radio" name="optradio" value='2'>{{this.answer2}}</label>
</div>
<div class="radio" id="question{{this.id}}answer3">
  <label><input type="radio" name="optradio" value='3'>{{this.answer3}}</label>
</div>
<div class="radio" id="question{{this.id}}answer4">
  <label><input type="radio" name="optradio" value='4'>{{this.answer4}}</label>
</div>
<input type="submit" class="btn btn-success" value="Submit">
</form>
<br>

{{/unless}}
{{else}}
<b>Select a Land to Begin the Hunt!</b>
{{/each}}
</ul>

